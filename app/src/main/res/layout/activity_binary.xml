<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfirstapp.Binary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/binary_input_hit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择输入数字所属进制:"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/binary_input_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/binary_input_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onRadioButtonClicked"
                    android:text="二进制" />

                <RadioButton
                    android:id="@+id/binary_input_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onRadioButtonClicked"
                    android:text="八进制" />

                <RadioButton
                    android:id="@+id/binary_input_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onRadioButtonClicked"
                    android:text="十进制" />

                <RadioButton
                    android:id="@+id/binary_input_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onRadioButtonClicked"
                    android:text="十六进制" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/binary_input_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入待转换数:"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/binary_out_hit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择将要转换的目的进制："
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/binary_out_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/binary_out_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二进制"
                    android:layout_weight="1"
                    android:onClick="onRadioClicked" />

                <RadioButton
                    android:id="@+id/binary_out_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="八进制"
                    android:layout_weight="1"
                    android:onClick="onRadioClicked" />

                <RadioButton
                    android:id="@+id/binary_out_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="十进制"
                    android:layout_weight="1"
                    android:onClick="onRadioClicked" />

                <RadioButton
                    android:id="@+id/binary_out_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="十六进制"
                    android:layout_weight="1"
                    android:onClick="onRadioClicked" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/binary_out_texthint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="结果为："
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/binary_out_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="注意:   输入时请按照对应进制输入符合规定的字符"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
